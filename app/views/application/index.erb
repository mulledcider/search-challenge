<h1>Search</h1>
<h3>Users</h3>
<%= form_for :search do |f| %>
  <%= f.hidden_field :model, value: 'user' %>
  <%= f.select :user_column, User.column_names %>
  <%= f.search_field :user_q %>
  <%= f.label 'Search for empty value?', for: :is_empty %> 
  <%= f.check_box :is_empty %>

  <%= f.submit '🔍 Users' %>
<% end %>
<br>
